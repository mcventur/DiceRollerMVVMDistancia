<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.views.MainActivity"
    android:padding="@dimen/layout_padding">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/dadosFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.mpd.pmdm.dicerollerconstraintlayout.ui.views.DadosFragment"
        tools:layout="@layout/fragment_dados"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/rollsHistoryFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.mpd.pmdm.dicerollerconstraintlayout.ui.views.DiceRollListFragment"
        tools:layout="@layout/fragment_dice_roll_list" />

</LinearLayout>